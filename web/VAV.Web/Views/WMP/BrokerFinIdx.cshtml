@model VAV.Web.ViewModels.WMP.BrokerWMPFinIdxViewModel
@{
    string emptyMessageId = "emptyMessage" + ViewBag.ID;
}

<div class="colorBlock-header">
    <span class="colorBlock-header-span">@ViewBag.Name</span>
    <a href="#" class="exportExcel" onclick="WMP.ExportExcelForBrokerFinIdx(this,'@ViewBag.ID','@Url.Action("ExportBrokerFinIdxData", "WMP")')">
        <img alt="Export" src="/Content/themes/base/images/excel_icon.png">
    </a>
</div>
@if (Model.BrokerFinIdxData.Count == 0)
{
    <div id="@emptyMessageId" style="margin-left:10px;">@Resources.Global.Empty_Result</div>
}
else
{
    <div>
    <table class="datatable Zebra" style="cursor: pointer;">
        <thead>
            <tr class="hr">
                <th>@Resources.WMP.Broker_End_Date</th>
                <th>@Resources.WMP.Broker_Report_Source</th>
                <th>@Resources.WMP.Broker_Profit_of_Period</th>
                <th>@Resources.WMP.Broker_Ending_Net_Asset_Value</th>
                <th>@Resources.WMP.Broker_Net_Growth_Rate</th>
                <th>@Resources.WMP.Broker_Accumulated_Net_Growth_Rate</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var f in Model.BrokerFinIdxData)
            {
                <tr>
                    <td>@f.ENDDATE.ToString("yyyy-MM-dd")</td>
                    <td>@f.RPT_SRC</td>
                    <td style="text-align:right;">@f.PROFIT</td>
                    <td style="text-align:right;">@f.END_ASSET_VAL</td>
                    <td style="text-align:right;">@f.NET_GR</td>
                    <td style="text-align:right;">@f.UNIT_ACCUM_NET_GR</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
}
<div>@Resources.Global.Source</div>
