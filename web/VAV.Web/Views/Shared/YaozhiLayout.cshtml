@using VAV.Web.Common
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @{
            var themeName = ThemeHelper.GetTheme(Request);        
    }
    @Styles.Render("~/bundles/Yaozhi" + themeName)
    @Scripts.Render("~/bundles/YaozhiJs")
    @Scripts.Render("~/bundles/JET")
</head>
<body style="padding:20px;@(themeName=="Pearl" ? "background:#e7ebef;" :"")" >
    <div>
        @RenderBody()
    </div>
</body>
</html>
